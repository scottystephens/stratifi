                <div className="bg-white text-stratifi-700 px-4 py-2 rounded-full text-sm font-medium shadow-md border-2 border-stratifi-200">
                  ðŸŽ¯ Drop here (first position)
                </div>
              </div>
            </div>
          )}

          <div className="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            {watchlist.map((pair, idx) => {
              const isDragged = draggedIndex === idx

              return (
                <React.Fragment key={`${pair.from}-${pair.to}-${idx}`}>
                  {/* Insertion indicator before this card */}
                  {insertionIndex === idx && draggedIndex !== null && (
                    <div className="col-span-full flex justify-center py-2">
                      <div className="w-full max-w-md h-3 bg-gradient-to-r from-stratifi-500 to-stratifi-600 rounded-full shadow-lg animate-pulse flex items-center justify-center">
                        <div className="bg-white text-stratifi-700 px-4 py-2 rounded-full text-sm font-medium shadow-md border-2 border-stratifi-200">
                          ðŸŽ¯ Drop here (before {pair.from}/{pair.to})
                        </div>
                      </div>
                    </div>
                  )}

                  {/* The card */}
          const data = generateHistory(pair.from, pair.to, currentDays, rateType)
          const latest = data[data.length - 1]
          const start = data[0]
          const change = ((latest.rate - start.rate) / start.rate) * 100
          const isPositive = change >= 0
          const fromCurr = CURRENCIES.find(c => c.code === pair.from)
          const toCurr = CURRENCIES.find(c => c.code === pair.to)

          return (
            <div
              key={`${pair.from}-${pair.to}-${idx}`}
              draggable
              onDragStart={(e) => handleDragStart(e, idx)}
              onDragOver={(e) => handleDragOver(e, idx)}
              onDragLeave={handleDragLeave}
              onDrop={(e) => handleDrop(e, idx)}
              onDragEnd={handleDragEnd}
              className={cn(
                "bg-white rounded-xl border border-stone-200 shadow-sm hover:shadow-md transition-all duration-200 group cursor-move relative",
                isDragged && "opacity-50 scale-95 shadow-2xl rotate-3 z-50"
              )}
            >
              {isDragged && (
                <div className="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-xl border-2 border-blue-300 z-10"></div>
              )}
              <div className="p-5">
                {/* Card Header */}
                <div className="flex items-start justify-between mb-4">
                  <div className="flex items-center gap-3">
                    <div className="flex -space-x-2">
                        <span className="text-2xl z-10">{fromCurr?.flag}</span>
                        <span className="text-2xl transform translate-x-1">{toCurr?.flag}</span>
                    </div>
                    <div className="ml-2">
                      <h3 className="font-bold text-stone-900">
                        {pair.from} / {pair.to}
                      </h3>
                      <p className="text-xs text-stone-500">{fromCurr?.name} to {toCurr?.name}</p>
                    </div>
                  </div>

                  <div className="flex items-center gap-2">
                    <div className="p-2 text-stone-400 opacity-60 group-hover:opacity-100 transition-opacity">
                      <GripVertical className="h-4 w-4" />
                    </div>

                    <button
                      onClick={() => handleRemovePair(idx)}
                      className="p-2 rounded-lg text-stone-400 hover:text-red-500 hover:bg-red-50 opacity-0 group-hover:opacity-100 transition-all"
                    >
                      <X className="h-4 w-4" />
                    </button>

                    <button
                      onClick={() => swapPair(idx)}
                      className="p-2 rounded-lg bg-stratifi-700 hover:bg-stratifi-800 text-white transition-colors shadow-sm opacity-0 group-hover:opacity-100"
                      title={`Swap to ${pair.to}/${pair.from}`}
                    >
                      <ArrowRightLeft className="h-4 w-4" />
                    </button>
                  </div>
                </div>

                {/* Rate & Chart Row */}
                <div className="flex items-end justify-between gap-4 h-[120px]">
                  <div className="pb-1">
                    <div className="text-3xl font-bold font-mono tracking-tight text-stone-900">
                      {latest.rate.toFixed(4)}
                    </div>
                    <div className={cn(
                      "flex items-center gap-1 text-sm font-medium mt-1",
                      isPositive ? "text-green-600" : "text-red-600"
                    )}>
                      {isPositive ? <TrendingUp className="h-4 w-4" /> : <TrendingDown className="h-4 w-4" />}
                      <span>{Math.abs(change).toFixed(2)}%</span>
                      <span className="text-stone-400 font-normal ml-1">({timeRange})</span>
                    </div>
                  </div>

                  <div className="flex-1 h-full min-w-0">
                    <ResponsiveContainer width="100%" height="100%">
                      <AreaChart data={data}>
                        <defs>
                          <linearGradient id={`grad-${idx}`} x1="0" y1="0" x2="0" y2="1">
                            <stop offset="5%" stopColor={isPositive ? '#16a34a' : '#dc2626'} stopOpacity={0.1}/>
                            <stop offset="95%" stopColor={isPositive ? '#16a34a' : '#dc2626'} stopOpacity={0}/>
                          </linearGradient>
                        </defs>
                        <Area
                          type="monotone"
                          dataKey="rate"
                          stroke={isPositive ? '#16a34a' : '#dc2626'}
                          strokeWidth={2}
                          fill={`url(#grad-${idx})`}
                        />
                      </AreaChart>
                    </ResponsiveContainer>
                  </div>
                </div>

                {/* Footer Stats */}
                <div className="mt-4 pt-4 border-t border-stone-100 grid grid-cols-3 gap-2">
                  <div>
                    <p className="text-[10px] uppercase tracking-wider text-stone-400 font-medium">Low</p>
                    <p className="text-sm font-medium text-stone-700">
                      {Math.min(...data.map(d => d.rate)).toFixed(4)}
                    </p>
                  </div>
                  <div>
                    <p className="text-[10px] uppercase tracking-wider text-stone-400 font-medium">High</p>
                    <p className="text-sm font-medium text-stone-700">
                      {Math.max(...data.map(d => d.rate)).toFixed(4)}
                    </p>
                  </div>
                  <div className="text-right">
                    <p className="text-[10px] uppercase tracking-wider text-stone-400 font-medium">Avg</p>
                    <p className="text-sm font-medium text-stone-700">
                      {(data.reduce((a, b) => a + b.rate, 0) / data.length).toFixed(4)}

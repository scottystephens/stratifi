            </div>

            <div className="flex gap-2 pb-0.5">
              <Button onClick={handleAddPair} size="sm" className="bg-stratifi-700 text-white hover:bg-stratifi-800">
                Add Pair
              </Button>
              <Button onClick={() => setShowAddPair(false)} size="sm" variant="ghost">
                Cancel
              </Button>
            </div>
          </div>
        </div>
      )}

      {/* Watchlist Grid with Insertion Points */}
      <div className="relative">
        <div className="space-y-4">
          {/* Insertion indicator before first card */}
          {insertionIndex === 0 && draggedIndex !== null && (
            <div className="flex justify-center py-2">

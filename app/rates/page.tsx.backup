              </div>
        </div>
      </div>

      {/* Add Pair Modal/Popover (Inline for now) */}
      {showAddPair && (
        <div className="mb-6 bg-white p-4 rounded-xl border border-stone-200 shadow-sm animate-in zoom-in-95">
          <div className="flex items-end gap-4">
            <div className="space-y-1.5">
              <label className="text-xs font-medium text-stone-500">From Currency</label>
              <select
                className="h-9 w-full rounded-md border border-stone-200 bg-white px-3 py-1 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-stratifi-700"
                value={newPair.from}
                onChange={(e) => setNewPair({...newPair, from: e.target.value})}
              >
                {CURRENCIES.map(c => <option key={c.code} value={c.code}>{c.flag} {c.code}</option>)}
              </select>
            </div>

            <div className="pb-2 text-stone-400">
              <ArrowRightLeft className="h-4 w-4" />
            </div>

            <div className="space-y-1.5">
              <label className="text-xs font-medium text-stone-500">To Currency</label>
              <select
                className="h-9 w-full rounded-md border border-stone-200 bg-white px-3 py-1 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-stratifi-700"
                value={newPair.to}
                onChange={(e) => setNewPair({...newPair, to: e.target.value})}
              >

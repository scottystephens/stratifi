  { code: 'JPY', name: 'Japanese Yen', flag: 'ðŸ‡¯ðŸ‡µ' },
  { code: 'CHF', name: 'Swiss Franc', flag: 'ðŸ‡¨ðŸ‡­' },
  { code: 'CAD', name: 'Canadian Dollar', flag: 'ðŸ‡¨ðŸ‡¦' },
  { code: 'AUD', name: 'Australian Dollar', flag: 'ðŸ‡¦ðŸ‡º' },
  { code: 'NZD', name: 'New Zealand Dollar', flag: 'ðŸ‡³ðŸ‡¿' },
  { code: 'SGD', name: 'Singapore Dollar', flag: 'ðŸ‡¸ðŸ‡¬' },
  { code: 'HKD', name: 'Hong Kong Dollar', flag: 'ðŸ‡­ðŸ‡°' },
]

// Mock Data Generator (Deterministic for SSR safety if we pass a seed, but here we use useEffect)
const generateHistory = (from: string, to: string, days: number, type: RateType) => {
  const data = []
  // Base rate simulation
  let baseRate = 1.0
  if (from === 'EUR' && to === 'USD') baseRate = 1.08
  if (from === 'GBP' && to === 'USD') baseRate = 1.27
  if (from === 'USD' && to === 'JPY') baseRate = 149.50
  
  // Random walk with fixed seed-like behavior for stability within session
  // We'll use a simple seeded random based on date index to prevent hydration mismatch
  // if we were rendering on server, but we'll use client-side rendering for safety.
  let currentRate = baseRate
  const today = new Date() 
  // Normalize today to avoid seconds/milliseconds diffs between server/client
  today.setHours(0,0,0,0)

  for (let i = days; i >= 0; i--) {
    const date = new Date(today)
    date.setDate(date.getDate() - i)
    
    // Pseudo-random based on pair + date to be deterministic
    const seed = (from.charCodeAt(0) + to.charCodeAt(0) + i) * 123.45
    const randomVal = (Math.sin(seed) + 1) / 2 // 0-1
    
    const volatility = 0.02
    currentRate = currentRate * (1 + (randomVal - 0.5) * volatility)
    
    // Adjust based on type (simulated)
    let displayRate = currentRate
    if (type === 'avg') displayRate = currentRate * 0.99 // Smoother
    if (type === 'eom') displayRate = currentRate // Just sampling points essentially

    data.push({
      date: date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }),
      rate: displayRate,
      change: (randomVal - 0.5) * 2
    })
  }
  return data
}

export default function RatesPage() {
  // State
  const [mounted, setMounted] = useState(false)
  const [watchlist, setWatchlist] = useState<CurrencyPair[]>([
    { from: 'EUR', to: 'USD' },
    { from: 'GBP', to: 'USD' },
    { from: 'USD', to: 'JPY' },
    { from: 'AUD', to: 'USD' }
  ])
  const [selectedCurrencies, setSelectedCurrencies] = useState<string[]>(['USD', 'EUR', 'GBP', 'JPY'])
  const [rateType, setRateType] = useState<RateType>('spot')
  const [timeRange, setTimeRange] = useState<TimeRange>('30D')
  const [showAddPair, setShowAddPair] = useState(false)
  const [newPair, setNewPair] = useState<CurrencyPair>({ from: 'USD', to: 'EUR' })
  const [customDateFrom, setCustomDateFrom] = useState('')
  const [customDateTo, setCustomDateTo] = useState('')
  const [draggedIndex, setDraggedIndex] = useState<number | null>(null)
  const [insertionIndex, setInsertionIndex] = useState<number | null>(null)

  useEffect(() => {
    setMounted(true)
  }, [])

  // Derived
  const daysMap = { '7D': 7, '30D': 30, '90D': 90, 'custom': 60 }
  const currentDays = daysMap[timeRange]

  const handleAddPair = () => {
    if (!watchlist.some(p => p.from === newPair.from && p.to === newPair.to)) {
      setWatchlist([...watchlist, newPair])
    }
    setShowAddPair(false)
  }

  const handleRemovePair = (index: number) => {
    const newList = [...watchlist]
    newList.splice(index, 1)
    setWatchlist(newList)
  }

  const toggleCurrency = (code: string) => {
    if (selectedCurrencies.includes(code)) {
      setSelectedCurrencies(selectedCurrencies.filter(c => c !== code))
    } else {
      setSelectedCurrencies([...selectedCurrencies, code])
    }
  }

  const swapPair = (index: number) => {
    const newWatchlist = [...watchlist]
    const [from, to] = [newWatchlist[index].to, newWatchlist[index].from]
    newWatchlist[index] = { from, to }
    setWatchlist(newWatchlist)
  }

  // Drag and drop handlers - Insertion-based
  const handleDragStart = (e: React.DragEvent, index: number) => {
    setDraggedIndex(index)
    e.dataTransfer.effectAllowed = 'move'
  }

  const handleDragOver = (e: React.DragEvent, index: number) => {
    e.preventDefault()
    e.dataTransfer.dropEffect = 'move'

    // Determine insertion point based on mouse position within the card
    const rect = (e.currentTarget as HTMLElement).getBoundingClientRect()
    const midpoint = rect.left + rect.width / 2
    const insertBefore = e.clientX < midpoint

    // Set insertion index
    setInsertionIndex(insertBefore ? index : index + 1)
  }

  const handleDragLeave = (e: React.DragEvent) => {
    // Only clear insertion if we're actually leaving the card area
    const rect = (e.currentTarget as HTMLElement).getBoundingClientRect()
    const isLeavingCard = e.clientX < rect.left || e.clientX > rect.right ||
                         e.clientY < rect.top || e.clientY > rect.bottom

    if (isLeavingCard) {
      setInsertionIndex(null)
    }
  }

  const handleDrop = (e: React.DragEvent) => {
    e.preventDefault()
    if (draggedIndex === null || insertionIndex === null) {
      setDraggedIndex(null)
      setInsertionIndex(null)
      return
    }

    const newWatchlist = [...watchlist]
    const draggedItem = newWatchlist[draggedIndex]
    newWatchlist.splice(draggedIndex, 1)

    // Insert at the insertion point, accounting for the removed item
    let adjustedInsertionIndex = insertionIndex
    if (insertionIndex > draggedIndex) {
      adjustedInsertionIndex -= 1
    }

    newWatchlist.splice(adjustedInsertionIndex, 0, draggedItem)

    setWatchlist(newWatchlist)
    setDraggedIndex(null)
    setInsertionIndex(null)
  }

  const handleDragEnd = () => {
    setDraggedIndex(null)
    setInsertionIndex(null)
  }

  // Prevent hydration mismatch by only rendering content on client
  if (!mounted) return <div className="p-8">Loading rates...</div>

  return (
    <div className="w-full max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8 py-6">

